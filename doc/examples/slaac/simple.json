{
    "Slaac": {

        // These are parameters to be advertised in RA
        "hop-limit": 64,
        "managed-flag": true,
        "other-flag": true,
        "router-lifetime": 9000,
        "reachable-time": 3600,
        "retrans-timer": 10,
        "comment": "Kea is doing now RA. yay!",

        // This section determines local network configuration.
        // We should listen on the following interfaces
        "interfaces-config": {
            "interfaces": [ "ethX" ]
        },

        // No source link-layer address option
        "source-ll-address": false,

        // No MTU option
        "mtu": 0,

        // Prefix Info options
        "prefix-infos": [
           {
              "prefix": "2001:db8::/64",
              "on-link-flag": true,
              "address-config-flag": true,
              "valid-lifetime": 86400,
              "preferred-lifetime": 21600
           }
        ],

        // Universal IPv6 RA option.
        // Any valid JSON is accepted but the I-D says a map (JSON object)
        // with an "ietf" entry. Here is the I-D example.
        "universal-ra": {
            "ietf": {
               "dns": {
                  "dnssl": [
                      "example.com"
                  ],
                  "rdnss": [
                      "2001:db8::1",
                      "2001:db8::2"
                  ]
               },
               "nat64": {
                   "prefix": "64:ff9b::/96"
               }
           }
        },

        // This is our logging configuration.
        "Logging": {
            "loggers": [
                {
                    "name": "kea-slaac",
                    "output_options": [
                        {
                            "output": "stdout"
                        }
                    ],
                    "severity": "INFO"
                }
            ]
        }

    }
}
